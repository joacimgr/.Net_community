@model DistroLabCommunity.ViewModel.Community.WelcomeVM

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="container" style="width: 400px">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Username
                    <span class="badge badge-primary badge-pill">@Model.Username</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Last login
                    <span class="badge badge-primary badge-pill">@Model.LastLogin</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Logins last 30 days
                    <span class="badge badge-primary badge-pill">@Model.LoginsLast30Days</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Unread Messages
                    <span class="badge badge-primary badge-pill">@Model.UnreadMessages</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-lg-2"></div>
</div>